@model CRUD.Models.Artista

<h2>Crear Artista</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="Nombre">Nombre </label>
        <input type="text" asp-for="Nombre" class="form-control" />
    </div>
    <div class="form-group">
        <label for="Genero">Género </label>
        <input type="text" asp-for="Genero" class="form-control" />
    </div>
    <div class="form-group">
        <label for="Edad">Edad </label>
        <input type="text" asp-for="Edad" class="form-control" />
    </div>

    <div class="form-group" style="margin-top: 20px;">
        <button type="submit" class="btn btn-primary" style="margin-right: 15px;">Guardar</button>
        <a href="@Url.Action("Index")" class="btn btn-secondary">Volver</a>
    </div>
</form>
