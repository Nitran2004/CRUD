@model CRUD.Models.Artista

<h2>Crear Artista</h2>

<form asp-action="Create">
    <div class="form-group">
        <label for="Nombre">Nombre</label>
        <input type="text" asp-for="Nombre" class="form-control" />
    </div>
    <div class="form-group">
        <label for="Genero">Género</label>
        <input type="text" asp-for="Genero" class="form-control" />
    </div>
    <div class="form-group">
        <label for="Edad">Edad</label>
        <input type="text" asp-for="Edad" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
</form>

<a href="@Url.Action("Index")" class="btn btn-secondary">Volver</a>
